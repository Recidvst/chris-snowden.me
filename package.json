{
  "name": "chris-snowden.me",
  "version": "0.0.1",
  "description": "Personal website/portfolio - Inspired by 80s neon aesthetic - Using Eleventy with a sprinkling of Svelte and Netlify",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Recidvst/chris-snowden.me.git"
  },
  "author": "Chris Snowden <cdsnowden@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Recidvst/chris-snowden.me/issues"
  },
  "homepage": "https://github.com/Recidvst/chris-snowden.me#readme",
  "main": "main.js",
  "scripts": {
    "check": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf ./dist ./cache",
    "prestart": "npm run clean",
    "prebuild": "npm run clean",
    "start": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:rollup": "rollup --watch --config rollup.config.dev.js",
    "build": "run-s prod:*",
    "prod:eleventy": "eleventy",
    "prod:rollup": "rollup --config rollup.config.prod.js",
    "prod:serviceworker": "echo 'TODO'",
    "lint:js": "eslint --ext \".js\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{css,scss}\" --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:style",
    "release:major": "changelog -M -t v1.0.0 && git add CHANGELOG.md && git commit -m 'chore(release): updated CHANGELOG after major release' && npm version major -m 'chore(release): upgrade to major version %s'",
    "release:minor": "changelog -m -t v1.0.0 && git add CHANGELOG.md && git commit -m 'chore(release): updated CHANGELOG after minor release' && npm version minor -m 'chore(release): upgrade to minor version %s'",
    "release:patch": "changelog -p -t v1.0.0 && git add CHANGELOG.md && git commit -m 'chore(release): updated CHANGELOG after patch release' && npm version patch -m 'chore(release): upgrade to patch version %s'",
    "postversion": "git checkout master && git push && git checkout develop && git push && git push --tags"
  },
  "lint-staged": {
    "*.{js}": "eslint",
    "*.{css}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --verbose && pretty-quick --staged --verbose",
      "commit-msg": "commitlint -V -E HUSKY_GIT_PARAMS",
      "post-commit": "echo 'ðŸŽˆðŸŽˆðŸŽˆðŸŽˆðŸŽˆðŸŽˆðŸŽˆðŸŽˆðŸŽˆðŸŽˆ'"
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@commitlint/cli": "^12.1.0",
    "@commitlint/config-conventional": "^12.0.1",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "babel-eslint": "^10.1.0",
    "eleventy-plugin-pwa": "^1.0.8",
    "eslint": "^7.22.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-import-order-aesthetic": "^1.0.3",
    "fs": "0.0.1-security",
    "generate-changelog": "^1.8.0",
    "html-minifier": "^4.0.0",
    "human-readable-numbers": "^0.9.5",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "md5-file": "5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.44.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "sass": "^1.32.8",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-prettier": "^1.2.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "scrambling-letters": "^1.6.2"
  }
}
