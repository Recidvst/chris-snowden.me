{% macro speedlifywebcomponent(params) %}

  {% set urlWithOrigin = 'https://www.chris-snowden.me' + params.url %}
  {% set targetURLHash = params.speedlifyJSON[urlWithOrigin].hash %}

  {% if params.useHomepage %}
    {% set targetURLHash = params.speedlifyJSON['https://www.chris-snowden.me/'].hash %}
  {% endif %}

  {% if params.url and urlWithOrigin and targetURLHash %}
    <a href="https://speedlify-chris-snowden.netlify.app/" class="speedlify-link">
      <speedlify-score class="speedlify-score--large" hash="{{targetURLHash}}" speedlify-url="https://speedlify-chris-snowden.netlify.app"></speedlify-score>
    </a>
  {% endif %}

  <script type="text/javascript" src="/speedlify-score.js"></script>

  <style>
    speedlify-score{display:flex;flex-wrap:wrap;align-items:center}.speedlify-score{font-size:.8125em;width:2.6em;height:2.6em;line-height:1;display:inline-flex;align-items:center;justify-content:center;border-radius:50%;border:2px solid #0cce6b;color:#088645;margin-left:.4615384615385em}.speedlify-score-ok{color:#ffa400;border-color:currentColor}.speedlify-score-bad{color:#ff4e42;border-color:currentColor}.speedlify-rank:before{content:"Rank #"}.speedlify-rank-change{font-size:.8125em}.speedlify-rank-change:before{line-height:1}.speedlify-rank-change.up{color:green}.speedlify-rank-change.up:before{content:"⬆"}.speedlify-rank-change.down{color:red}.speedlify-rank-change.down:before{content:"⬇"}speedlify-score>:not(.speedlify-score){margin-left:.625em}speedlify-score>:first-child{margin-left:0}.speedlify-score--large>.speedlify-score{width:3.5em;height:3.5em;font-size:1.5em;}
  </style>
{% endmacro %}
